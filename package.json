{
  "name": "fourmi",
  "version": "2.0.0-alpha.2",
  "description": "fourmi",
  "main": "init.js",
  "author": {
    "name": "Antoine Lafouasse",
    "email": "antoine.lafouasse@icloud.com"
  },
  "repository": "https://github.com/LrsNate/Fourmi",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "history": "^4.7.2",
    "mkdirp": "^0.5.1",
    "nedb": "^1.8.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "ajv": "^5.3.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.1.18",
    "browser-sync": "^2.9.3",
    "electron": "^1.7.9",
    "electron-builder": "^19.45.4",
    "electron-devtools-installer": "^2.2.1",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.3.0-beta.6",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.8.2",
    "react-test-renderer": "^16.1.0",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/app.js",
      "!app/main.js",
      "!app/store.js",
      "!app/routes.js"
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "develop": "npm run private:compile -- --source-maps true && run-p -r private:watch private:serve",
    "test": "jest",
    "test:coverage": "jest --collectCoverage",
    "test:coverage:publish": "run-s test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:watch": "jest --watch",
    "reformat": "run-s reformat:src reformat:test reformat:scripts",
    "reformat:src": "prettier --write app/*.js app/**/*.js",
    "reformat:test": "prettier --write test/*.js test/**/*.js",
    "reformat:scripts": "prettier --write scripts/*.js scripts/**/*.js",
    "lint": "eslint --no-ignore scripts app test *.js",
    "pack": "run-s private:clean private:compile private:build:all",
    "pack:mac": "run-s private:clean private:compile private:build:mac",
    "pack:win": "run-s private:clean private:compile private:build:win",
    "pack:linux": "run-s private:clean private:compile private:build:linux",
    "private:build:all": "electron-builder -mwl",
    "private:build:mac": "electron-builder --mac",
    "private:build:win": "electron-builder --win",
    "private:build:linux": "electron-builder --linux",
    "private:watch": "npm run private:compile -- --source-maps true --watch --skip-initial-build",
    "private:serve": "babel-node scripts/serve.js",
    "private:compile": "babel app/ --copy-files --out-dir build",
    "private:clean": "rimraf build"
  }
}
