{
  "extends": "airbnb",
  "plugins": [
    "import",
    "jest"
  ],
  "rules": {
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "react/prefer-stateless-function": "off"
  },
  "globals": {
    "document": true,
    "window": true
  },
  "env": {
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  }
}
