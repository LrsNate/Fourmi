{
  "extends": ["airbnb", "prettier", "plugin:flowtype/recommended"],
  "plugins": ["import", "jest", "prettier", "flowtype"],
  "rules": {
    "class-methods-use-this": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "react/prefer-stateless-function": "off",
    "react/prop-types": "off"
  },
  "globals": {
    "document": true,
    "window": true
  },
  "env": {
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  }
}
